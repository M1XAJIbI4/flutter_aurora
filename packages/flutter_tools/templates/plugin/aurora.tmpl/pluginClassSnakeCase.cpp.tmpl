#include <{{projectName}}/{{pluginClassSnakeCase}}.h>
#include <flutter/method-channel.h>
#include <sys/utsname.h>

void {{pluginClass}}::RegisterWithRegistrar(PluginRegistrar &registrar)
{
    registrar.RegisterMethodChannel("{{projectName}}",
                                    MethodCodecType::Standard,
                                    [this](const MethodCall &call) { this->onMethodCall(call); });
}

void {{pluginClass}}::onMethodCall(const MethodCall &call)
{
    const auto &method = call.GetMethod();

    if (method == "getPlatformVersion") {
        onGetPlatformVersion(call);
        return;
    }

    unimplemented(call);
}

void {{pluginClass}}::onGetPlatformVersion(const MethodCall &call)
{
    utsname uname_data{};
    uname(&uname_data);

    std::string preamble = "Aurora (Linux): ";
    std::string version = preamble + uname_data.version;

    call.SendSuccessResponse(version);
}

void {{pluginClass}}::unimplemented(const MethodCall &call)
{
    call.SendSuccessResponse(nullptr);
}
